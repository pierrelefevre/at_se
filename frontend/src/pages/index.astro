---
import Layout from "../layouts/Layout.astro";

import { getStories, getGroups } from "../db/db";

let groups = await getGroups();
let stories = await getStories();

---

<Layout title="Ã¥t.se" stories={stories}>
    { groups.map((group, index) => (
        <div class="my-5 p-3">
          <p class="text-3xl text-white font-bold">{group.name}</p>
          {group.value.map((storyId, index) => (
              <a
                href={"/stories/" + storyId} 
                ><div
                class="text-xl text-white font-semibold my-3">
                <p>
                  {
                    stories.find((story) => story.id === storyId)?.summary
                      ?.title
                  }
                </p>

                  <span class="text-base font-normal">
                    {stories
                      .find((story) => story.id === storyId)
                      ?.summary?.body.split(" ")
                      .slice(0, 20)
                      .join(" ") + "..."}
                  </span>
                </div>
              </a>
          ))}
{index < groups.length-1 &&
          <hr class="h-px mt-8  border-0 bg-gray-500">}

        </div>
      ))
    }
</Layout>
